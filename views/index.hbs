<body>
    <header class="container" style="width: 700px; ">

        <div id="carouselMain" class="carousel carousel-dark slide" data-ride="carousel">

            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselMain" data-bs-slide-to="0" class="active"
                    aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselMain" data-bs-slide-to="1" aria-label="Slide 2"
                    class=""></button>
                <button type="button" data-bs-target="#carouselMain" data-bs-slide-to="2" aria-label="Slide 3"
                    class="active" aria-current="true"></button>
            </div>

            <div class="carousel-inner border border-dark">

                <div class="carousel-item active text-center" data-interval="3000">
                    <img src="img/party.jpg" alt="" class="img-fluid w-100 h-25 ">
                </div>

                <div class="carousel-item  text-center" data-interval="3000">
                    <img src="img/onepiece_red.jpg" alt="" class="img-fluid w-100 h-100">
                </div>

                <div class="carousel-item  text-center" data-interval="3000">
                    <img src="img/show.jpg" alt="" class="img-fluid w-100 h-100">
                </div>

            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#carouselMain" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselMain" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

        </div>
        <hr class="mt-3">
    </header>



    <main>

        <div class="container-fluid row text-center">
            <div class="container-fluid col m-3 justify-content-center">
                <button type="button" class="btn btn-outline-secondary">Todos os eventos</button>
                <button type="button" class="btn btn-outline-secondary">Shows</button>
                <button type="button" class="btn btn-outline-secondary">Festas</button>
                <button type="button" class="btn btn-outline-secondary">Esportes</button>
                <button type="button" class="btn btn-outline-secondary">Teatro</button>
            </div>
        </div>

        <div class="container ">
            <div class="row mx-2">

                {{#each lista}}
                <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6 d-flex align-items-stretch my-3">
                    <div class="card text-center bg-light" style="width: 50rem;">
                        <img src={{foto}} class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title">{{nome}} </h5>
                            <p class="card-text">{{descricao}}</p>
                        </div>
                    </div>
                </div>

                {{/each}}
            </div>
        </div>



    </main>





</body>

</html>